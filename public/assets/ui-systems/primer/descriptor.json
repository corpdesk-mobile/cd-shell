{
    "id": "primer",
    "name": "GitHub Primer",
    "version": "21.0.0",
    "description": "Primer CSS UI System (GitHubâ€™s design system).",
    "author": "GitHub",
    "license": "MIT",
    "assetPath": "/assets/ui-systems/primer",
    "cssUrl": "primer.min.css",
    "stylesheets": [
        "primer.min.css",
        "bridge.css"
    ],
    "scripts": [],
    "conceptMappings": {
        "button": {
            "class": "btn btn-primary"
        },
        "card": {
            "class": "Box"
        },
        "input": {
