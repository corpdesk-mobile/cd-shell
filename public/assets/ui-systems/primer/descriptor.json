        },
        {
            "id": "dark",
            "name": "Primer Dark",
            "displayName": "Primer Dark",
            "css": "/themes/dark/theme.css",
            "mode": "dark"
        }
    ],
    "themeActive": null,
    "metadata": {
        "supportsDarkMode": true
    },
    "extensions": {
        "adapter": "PrimerAdapterService",
        "versionTag": "primer"
    }
}
