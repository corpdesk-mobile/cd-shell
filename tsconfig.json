{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "useDefineForClassFields": false,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "outDir": "dist-ts",
    "rootDir": "src",
    "noEmit": false,
    "allowJs": false,
    "types": ["vite/client"]
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules", 
    "dist", 
    "dist-ts",
    "src/CdShell/**/view/**"
  ] 
}
